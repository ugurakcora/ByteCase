<section class="bg-gradient-to-br from-teal-400 to-blue-500 min-h-screen p-4">
    
    <div class="max-w-5xl mx-auto relative">
        <div class="relative rounded-2xl overflow-hidden shadow-2xl">
            <img src="https://images.pexels.com/photos/276583/pexels-photo-276583.jpeg" 
                 alt="Modern living room" 
                 class="w-full h-auto">
            
            <!-- Hotspots -->
            <button class="hotspot" style="top: 35%; left: 25%;" data-product="art"></button>
            <button class="hotspot" style="top: 70%; left: 50%;" data-product="sofa"></button>
            <button class="hotspot" style="top: 45%; left: 80%;" data-product="shelf"></button>
        </div>
    </div>

    <!-- Product Modal Template -->
    <div id="productModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-sm w-full overflow-hidden">
            <div class="relative">
                <button class="absolute top-2 right-2 bg-white rounded-full p-1 shadow-md hover:bg-gray-100 transition-colors z-10" onclick="closeModal()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M18 6L6 18M6 6l12 12"/>
                    </svg>
                </button>
                <img id="modalImage" class="w-full h-[150px] object-cover">
            </div>
            <div class="p-4">
                <h3 id="modalTitle" class="font-semibold text-gray-900 mb-1"></h3>
                <p id="modalPrice" class="font-bold text-xl mb-4"></p>
                <div class="flex space-x-2">
                    <button class="w-full bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-medium py-2 px-4 rounded transition-colors duration-200 text-sm">
                        VIEW PRODUCT
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>

{{ 'hover-product.js' | asset_url | script_tag }}

{% schema %}
{
    "name": "Interactive Products",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title",
            "default": "Interactive Products"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "VIEW PRODUCT"
        }
    ],
    "blocks": [
        {
            "type": "product",
            "name": "Product",
            "limit": 3,
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                },
                {
                    "type": "range",
                    "id": "position_top",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "%",
                    "label": "Vertical Position",
                    "default": 50
                },
                {
                    "type": "range",
                    "id": "position_left",
                    "min": 0,
                    "max": 100,
                    "step": 1,
                    "unit": "%",
                    "label": "Horizontal Position",
                    "default": 50
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Interactive Products",
            "blocks": [
                {
                    "type": "product"
                },
                {
                    "type": "product"
                },
                {
                    "type": "product"
                }
            ]
        }
    ]
}
{% endschema %}